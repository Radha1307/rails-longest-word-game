<div class="container">
  <h1>WELCOME TO LONG ASS WORD GAME!</h1>
  <h2>Here is your Grid:</h2>
  
  <div class="flexbox">
    <% @letters.each do |letter| %>
      <div class="tile"><%= letter %></div>
    <% end %> 
  </div>

  <h4>Type the longest word you can come up with</h4>
  <form action="/score" method="post">
    <input type="text" name="query" placeholder="word"> 
    <input type="submit" value="Play!">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :grid, @letters %>
  </form>
</div>